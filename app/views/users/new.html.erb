<h2>Sign Up</h2>

<div id="newuserform">
<%= form_for @user do |f| %>
  <div class='userform'>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class='userform'>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

<%= f.submit "Submit" %>
<% end %>
</div>
